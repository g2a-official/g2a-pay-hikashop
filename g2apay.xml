<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="3.1" method="upgrade" group="hikashoppayment">
    <name>Hikashop G2A Pay Payment Plugin</name>
    <creationDate>09 June 2016</creationDate>
    <version>1.1.0</version>
    <author>G2A.COM Limited</author>
    <authorEmail>contact@integrations.g2a.com</authorEmail>
    <authorUrl>https://pay.g2a.com</authorUrl>
    <copyright>(C) 2016 G2A.COM All rights reserved.</copyright>
    <license>http://opensource.org/licenses/osl-3.0.php  Open Software License (OSL 3.0)</license>
    <description>Easily integrate 100+ global and local payment methods with all-in-one solution.</description>
    <files>
        <filename plugin="g2apay">g2apay.php</filename>
        <filename>g2apay_end.php</filename>
        <filename>G2APayClient.php</filename>
        <filename>index.html</filename>
        <folder>media</folder>
    </files>
    <media folder="media" destination="com_hikashop/images/payment/g2apay">
        <filename>g2apay.png</filename>
    </media>
    <params addpath="/components/com_hikashop/params">
        <param name="pluginoptions" type="pluginoptions" default="plugin" label="hikashop"
               description="HikaShop options" />
    </params>
    <config>
        <fields name="params" addfieldpath="/components/com_hikashop/fields">
            <fieldset name="basic">
                <field id="pluginoptions" name="pluginoptions" type="pluginoptions" label="hikashop"
                       description="HikaShop options" />
            </fieldset>
        </fields>
    </config>
</extension>
